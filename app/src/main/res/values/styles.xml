<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MaterialSingleItemTextAppearance">
        <item name="android:alpha">0.87</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/material_list_single_item_text_size</item>
        <item name="android:layout_height">@dimen/material_single_item_list_height</item>
    </style>
    <dimen name="material_list_single_item_text_size">16sp</dimen>
</resources>
